{
  "id": "com.elysium.minimal-mode",
  "name": "Minimal Mode",
  "category": "theme",
  "version": "3.0.1",
  "minAppVersion": "1.0.0",
  "author": "Elysium Team",
  "description": "A comprehensive theming plugin demonstrating the hierarchical Token API. Customize per-entity-type calendar colors, styling, layout, and UI positioning. Includes OpenTime export/import hooks for portable plugin data.",
  "repo": "https://github.com/elysiumis/elysium-minimal-mode",
  "supportLinks": [
    { "label": "Website", "url": "https://elysium.is" }
  ],
  "permissions": ["theme", "write:settings", "customize:ui"],
  "main": "main.js",
  "tags": ["theme", "minimal", "ui", "accessibility", "developer-example"],
  "settingsSchema": {
    "settings": [
      {
        "id": "accentColor",
        "type": "color",
        "label": "Accent Color",
        "description": "Primary accent color used throughout the app",
        "default": "#20a2a1"
      },
      {
        "id": "goalBlockColor",
        "type": "color",
        "label": "Goal Block Color",
        "description": "Calendar block color for Goals (hierarchical token: calendar.block.goal.backgroundColor)",
        "default": "#FF6B6B"
      },
      {
        "id": "taskBlockColor",
        "type": "color",
        "label": "Task Block Color",
        "description": "Calendar block color for Tasks (hierarchical token: calendar.block.task.backgroundColor)",
        "default": "#4ECDC4"
      },
      {
        "id": "eventBlockColor",
        "type": "color",
        "label": "Event Block Color",
        "description": "Calendar block color for Events (hierarchical token: calendar.block.event.backgroundColor)",
        "default": "#45B7D1"
      },
      {
        "id": "habitBlockColor",
        "type": "color",
        "label": "Habit Block Color",
        "description": "Calendar block color for Habits (hierarchical token: calendar.block.habit.backgroundColor)",
        "default": "#96CEB4"
      },
      {
        "id": "appointmentBlockColor",
        "type": "color",
        "label": "Appointment Block Color",
        "description": "Calendar block color for Appointments (hierarchical token: calendar.block.appointment.backgroundColor)",
        "default": "#DDA0DD"
      },
      {
        "id": "reminderBlockColor",
        "type": "color",
        "label": "Reminder Block Color",
        "description": "Calendar block color for Reminders (hierarchical token: calendar.block.reminder.backgroundColor)",
        "default": "#F7DC6F"
      },
      {
        "id": "buttonShape",
        "type": "dropdown",
        "label": "Button Shape",
        "description": "Shape of button backgrounds",
        "default": "none",
        "options": [
          { "value": "circle", "label": "Circle" },
          { "value": "roundedRect", "label": "Rounded Rectangle" },
          { "value": "square", "label": "Square" },
          { "value": "none", "label": "None (No Background)" }
        ]
      },
      {
        "id": "cardShape",
        "type": "dropdown",
        "label": "Card Shape",
        "description": "Shape of card containers",
        "default": "roundedRect",
        "options": [
          { "value": "roundedRect", "label": "Rounded Rectangle" },
          { "value": "square", "label": "Square" },
          { "value": "none", "label": "None" }
        ]
      },
      {
        "id": "chipShape",
        "type": "dropdown",
        "label": "Chip Shape",
        "description": "Shape of status chips and tags",
        "default": "roundedRect",
        "options": [
          { "value": "capsule", "label": "Capsule" },
          { "value": "roundedRect", "label": "Rounded Rectangle" },
          { "value": "square", "label": "Square" }
        ]
      },
      {
        "id": "buttonHasBackground",
        "type": "toggle",
        "label": "Button Backgrounds",
        "description": "Show backgrounds behind buttons",
        "default": false
      },
      {
        "id": "cardHasBackground",
        "type": "toggle",
        "label": "Card Backgrounds",
        "description": "Show backgrounds on card containers",
        "default": true
      },
      {
        "id": "showShadows",
        "type": "toggle",
        "label": "Show Shadows",
        "description": "Enable shadow effects on elements",
        "default": false
      },
      {
        "id": "shadowRadius",
        "type": "slider",
        "label": "Shadow Radius",
        "description": "Blur radius for shadows (when enabled)",
        "default": 4,
        "min": 0,
        "max": 20,
        "step": 1
      },
      {
        "id": "backgroundOpacity",
        "type": "slider",
        "label": "Background Opacity",
        "description": "Opacity of backgrounds (0-100%)",
        "default": 80,
        "min": 0,
        "max": 100,
        "step": 5
      },
      {
        "id": "sidebarWidth",
        "type": "slider",
        "label": "Sidebar Width",
        "description": "Width of the sidebar in points",
        "default": 280,
        "min": 200,
        "max": 400,
        "step": 10
      },
      {
        "id": "buttonSize",
        "type": "slider",
        "label": "Button Size",
        "description": "Standard button size in points",
        "default": 44,
        "min": 30,
        "max": 60,
        "step": 2
      },
      {
        "id": "iconSize",
        "type": "slider",
        "label": "Icon Size",
        "description": "Standard icon size in points",
        "default": 24,
        "min": 16,
        "max": 32,
        "step": 2
      },
      {
        "id": "cornerRadius",
        "type": "slider",
        "label": "Corner Radius",
        "description": "Default corner radius for elements",
        "default": 4,
        "min": 0,
        "max": 24,
        "step": 1
      },
      {
        "id": "spacing",
        "type": "slider",
        "label": "Spacing",
        "description": "Standard spacing between elements",
        "default": 16,
        "min": 8,
        "max": 32,
        "step": 2
      },
      {
        "id": "rowHeight",
        "type": "slider",
        "label": "Row Height",
        "description": "Height of list rows",
        "default": 60,
        "min": 40,
        "max": 80,
        "step": 4
      },
      {
        "id": "hourHeight",
        "type": "slider",
        "label": "Hour Height",
        "description": "Height of hour blocks in calendar views",
        "default": 60,
        "min": 40,
        "max": 120,
        "step": 5
      },
      {
        "id": "quickEntryPosition",
        "type": "dropdown",
        "label": "Quick Entry Position",
        "description": "Where the quick entry button appears",
        "default": "bottomRight",
        "options": [
          { "value": "bottomRight", "label": "Bottom Right" },
          { "value": "topRight", "label": "Top Right" },
          { "value": "sidebar", "label": "Sidebar" },
          { "value": "hidden", "label": "Hidden" }
        ]
      },
      {
        "id": "floatingButtonPosition",
        "type": "dropdown",
        "label": "Floating Button Position",
        "description": "Where floating action buttons appear",
        "default": "bottomRight",
        "options": [
          { "value": "bottomRight", "label": "Bottom Right" },
          { "value": "bottomLeft", "label": "Bottom Left" },
          { "value": "topRight", "label": "Top Right" },
          { "value": "hidden", "label": "Hidden" }
        ]
      },
      {
        "id": "toolbarPosition",
        "type": "dropdown",
        "label": "Toolbar Position",
        "description": "Where the toolbar appears",
        "default": "top",
        "options": [
          { "value": "top", "label": "Top" },
          { "value": "bottom", "label": "Bottom" },
          { "value": "hidden", "label": "Hidden" }
        ]
      },
      {
        "id": "liquidGlassEnabled",
        "type": "toggle",
        "label": "Liquid Glass Effect",
        "description": "Enable the liquid glass visual effect",
        "default": false
      },
      {
        "id": "monochromeEnabled",
        "type": "toggle",
        "label": "Monochrome Icons",
        "description": "Use monochrome icons (uses accent color)",
        "default": true
      },
      {
        "id": "applyToCalendarBlocks",
        "type": "toggle",
        "label": "Apply to Calendar Blocks",
        "description": "Also apply monochrome to calendar event blocks (off by default to preserve user-set colors)",
        "default": false
      },
      {
        "id": "disableGlowEffects",
        "type": "toggle",
        "label": "Disable Glow Effects",
        "description": "Turn off all glow effects",
        "default": true
      }
    ]
  }
}
